<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../static/css/website.css" type="text/css" />

    <title>Change Password</title>
  </head>
  <body>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/home"
          ><img
            src="https://www.clipartmax.com/png/middle/238-2386243_pills-comments-medicine-icon-png.png"
            alt="image not loading"
            id="pic"
        /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/schemes">Schemes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/meds">Meds</a>
            </li>
            <li class="nav-item-logout">
              <a href="/login" class="nav-link">Logout</a>
            </li>
            <li class="nav-item-profile">
              <a href="/profile" class="nav-link"
                ><img
                  src="https://www.seekpng.com/png/detail/41-410093_circled-user-icon-user-profile-icon-png.png"
                  id="pp"
                  alt="na"
                />
                <%= profilename%></a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <h4>Change Password</h4>
      <hr />
      <form action="/update2" method="post">
        Enter your previous password: <br />
        <input type="password" name="passprev" id="pass-prev" /><br />
        Enter your new password: <br />
        <input type="password" name="passnew" id="pass-new" /><br /><br />
        Confirm your new password: <br />
        <input type="password" name="passconf" id="pass-conf" /><br /><br />
        <input type="submit" value="Change" />
      </form>
      <br />
      <p style="color: red"><%= error%></p>
      <br />
    </div>
  </body>
</html>
