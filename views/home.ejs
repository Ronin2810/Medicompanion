    <div class="container">
      <!-- <h1>this is the home page</h1> -->

      <!-- Can add randomized quotes using APIs  -->
      <figure class="text-center">
        <blockquote class="blockquote">
          <p>
            “For he who has health has hope; and he who has hope, has
            everything.”
          </p>
        </blockquote>
        <figcaption class="blockquote-footer">
          <cite title="Source Title">Owen Arthur</cite>
        </figcaption>
      </figure>

      <div class="carosel">
        <div
          id="carouselExampleCaptions"
          class="carousel slide"
          data-bs-ride="carousel"
        >
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="1"
              aria-label="Slide 2"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleCaptions"
              data-bs-slide-to="2"
              aria-label="Slide 3"
            ></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img
                src="https://g5-assets-cld-res.cloudinary.com/image/upload/x_0,y_49,h_1155,w_2048,c_crop/q_auto,f_auto,fl_lossy,c_fill,g_center,h_406,w_720/v1605807216/g5/g5-c-5lzenrews-olympus-property-management/g5-cl-1k91bxj386-redstone-at-santan-village/services/GettyImages-916060452_ll38ql.jpg"
                class="d-block w-100"
                alt="..."
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>Prevention is better than cure</h5>
                <p>Stay healthy and happy with our wellness programs</p>
              </div>
            </div>
            <div class="carousel-item">
              <img
                src="https://www.utoronto.ca/sites/default/files/Doctor-and-patient-weblead.jpg"
                class="d-block w-100"
                alt="..."
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>Specialized services for your unique needs</h5>
                <p>Expert care for a range of conditions</p>
              </div>
            </div>
            <div class="carousel-item">
              <img
                src="https://videohive.img.customer.envatousercontent.com/files/6262da3a-0cb9-4d31-a27f-09504f4838ed/inline_image_preview.jpg?auto=compress%2Cformat&fit=crop&crop=top&max-h=8000&max-w=590&s=eeace5552a32102d25ac3e1dc4fb7d13"
                class="d-block w-100"
                alt="..."
              />
              <div class="carousel-caption d-none d-md-block">
                <h5>Convenient healthcare from the comfort of your home</h5>
                <p>Stay connected with our telehealth services</p>
              </div>
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
      <br />
      <div class="features">
        <h4>Features</h4>
        <div class="card" style="width: 18rem">
          <img
